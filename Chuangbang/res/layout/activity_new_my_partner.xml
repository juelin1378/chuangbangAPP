<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/et_new_my_partner_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="需求标题" />

    <EditText
        android:id="@+id/et_new_my_partner_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="需求内容" />

    <EditText
        android:id="@+id/et_new_my_partner_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="联系人姓名" />

    <EditText
        android:id="@+id/et_new_my_partner_cellphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="联系人电话"
        android:inputType="number" />

    <Button
        android:id="@+id/bt_new_partner_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发布" />

</LinearLayout>